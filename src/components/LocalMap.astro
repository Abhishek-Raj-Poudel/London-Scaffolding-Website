---
interface Props {
  embedUrl: string;
  title?: string;
}

const { embedUrl, title = "Area Map" } = Astro.props;
---

<div
  class="w-full rounded-2xl overflow-hidden shadow-lg border border-slate-200"
>
  <iframe
    src={embedUrl}
    width="100%"
    height="450"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title={title}
    class="w-full grayscale contrast-125"></iframe>
</div>

<style>
  @reference "../styles/global.css";

  iframe {
    filter: grayscale(1) contrast(1.1) brightness(1.1) invert(0.1);
  }
</style>
