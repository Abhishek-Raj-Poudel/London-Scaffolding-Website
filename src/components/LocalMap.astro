---
interface Props {
  embedUrl: string;
  title?: string;
}

const { embedUrl, title = "Area Map" } = Astro.props;
---

<div class="w-full">
  <iframe
    src={embedUrl}
    width="100%"
    height="500"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title={title}
    class="w-full"></iframe>
</div>

<style>
  @reference "../styles/global.css";

  iframe {
    filter: grayscale(1) contrast(1.1) brightness(1.1) invert(0.1);
  }
</style>
