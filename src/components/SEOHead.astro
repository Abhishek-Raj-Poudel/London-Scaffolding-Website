---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string | URL;
  type?: "website" | "article" | "profile";
  schema?: any; // JSON-LD Schema object
}

const {
  title = "London Scaffolding | Professional Scaffolding Services",
  description = "Expert scaffolding services in London for residential and commercial projects. Fully insured, CITB registered, and available 24/7. Get a free quote today.",
  image = "/images/og-default.jpg", // Make sure this image exists or use a variable
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
  type = "website",
  schema,
} = Astro.props;

const siteName = "London Scaffolding";
const twitterHandle = "@londonscaffolding"; // Replace with actual handle if available
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content={siteName} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
<!-- <meta property="twitter:site" content={twitterHandle} /> -->

<!-- Schema.org JSON-LD -->
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@graph": [
      // LocalBusiness Schema (Sitewide)
      {
        "@type": "ConstructionCompany",
        "@id": `${Astro.site}#organization`,
        name: "London Scaffolding",
        url: Astro.site,
        logo: `${Astro.site}logo.png`, // Ensure logo exists
        image: `${Astro.site}images/hero-bg.jpg`, // Use a valid image
        description: "Professional scaffolding services in London.",
        address: {
          "@type": "PostalAddress",
          streetAddress: "4th floor, 18 St. Cross Street",
          addressLocality: "London",
          postalCode: "EC1N 8U",
          addressCountry: "UK",
        },
        geo: {
          "@type": "GeoCoordinates",
          latitude: 51.5074, // Update with real coordinates
          longitude: -0.1278,
        },
        openingHoursSpecification: {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday",
          ],
          opens: "00:00",
          closes: "23:59",
        },
        telephone: "+44 20 7060 4460",
        priceRange: "$$",
      },
      // Breadcrumb Schema
      {
        "@type": "BreadcrumbList",
        "@id": `${Astro.url}#breadcrumb`,
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Home",
            item: Astro.site,
          },
          // Add dynamic breadcrumbs logic here if possible, or keep simple for now
          ...(Astro.url.pathname !== "/"
            ? [
                {
                  "@type": "ListItem",
                  position: 2,
                  name: title, // Using page title as breadcrumb name
                  item: Astro.url,
                },
              ]
            : []),
        ],
      },
      // Page specific schema
      ...(schema ? [schema] : []),
    ],
  })}
/>
