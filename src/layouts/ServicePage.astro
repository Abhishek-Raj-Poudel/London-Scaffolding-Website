---
import MainLayout from "./main.astro";
import { CTA } from "@/components/CTA";
import { FAQ } from "@/components/FAQ";

interface Props {
  content: {
    title: string;
    description: string;
    gallery?: any[];
    faqs?: { question: string; answer: string }[];
    cta?: {
      title: string;
      description: string;
      buttonText: string;
      phoneText: string;
    };
  };
  areas?: { title: string; slug: string }[];
}

const { content } = Astro.props;

// Prepare gallery images if they exist
const galleryImages = content.gallery?.map((img: any) => ({
  src: img.src,
  alt: `${content.title} Project`,
}));

// We need to parse headings from Markdown content if we want them dynamic,
// but since we render <slot />, passing headings is tricky without the page component helping.
// However, the prompt says "table of conent should help user go the FAQ and a gallary section".
// So we can hardcode the main sections for now or rely on a simple list if we don't have headings extraction here.
// Actually, let's make a static sidebar navigation for the major sections of the page.

import { GalleryMasonry } from "@/components/GalleryMasonry";

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Service",
      name: content.title,
      description: content.description,
      provider: {
        "@id": `${Astro.site}#organization`,
      },
      areaServed: {
        "@type": "City",
        name: "London",
      },
    },
    ...(content.faqs
      ? [
          {
            "@type": "FAQPage",
            mainEntity: content.faqs.map((faq) => ({
              "@type": "Question",
              name: faq.question,
              acceptedAnswer: {
                "@type": "Answer",
                text: faq.answer,
              },
            })),
          },
        ]
      : []),
  ],
};
---

<MainLayout
  content={{
    title: content.title,
    description: content.description,
    schema: schema,
  }}
>
  {/* Hero Section */}
  <section class="bg-primary text-white py-20 border-b border-white/10">
    <div class="wrapper">
      <div class="max-w-4xl flex flex-col gap-6">
        <h1 class="typo-5xl">{content.title}</h1>
        <p class="typo-xl text-white/90 leading-relaxed">
          {content.description}
        </p>
        <div class="flex gap-4 mt-4">
          <a
            href="#quote"
            class="bg-white text-primary px-8 py-3 rounded-full font-bold hover:bg-white/90 transition-colors"
          >
            Get Instant Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  {/* Main Content */}
  <section class="py-20">
    <div class="wrapper grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2 prose prose-slate max-w-none">
        <div class="space-y-8">
          <slot />
        </div>

        {/* Gallery Section */}
        <div id="gallery" class="pt-16 scroll-mt-24">
          <h2 class="typo-3xl mb-8">Recent Projects Gallery</h2>
          <GalleryMasonry images={galleryImages} client:load />
        </div>
      </div>

      {/* Sidebar / Table of Contents */}
      <aside class="space-y-8 h-fit sticky top-24">
        <div class="bg-muted/30 p-8 rounded-2xl">
          <h3 class="typo-xl font-bold mb-4">Table of Contents</h3>
          <ul class="space-y-3">
            <li
              class="text-sm text-slate-700 font-medium hover:text-primary transition-colors"
            >
              <a href="#overview">Overview</a>
            </li>
            {
              content.faqs && (
                <li class="text-sm text-slate-700 font-medium hover:text-primary transition-colors">
                  <a href="#faq">Frequently Asked Questions</a>
                </li>
              )
            }
            <li
              class="text-sm text-slate-700 font-medium hover:text-primary transition-colors"
            >
              <a href="#gallery">Project Gallery</a>
            </li>
            <li
              class="text-sm text-slate-700 font-medium hover:text-primary transition-colors"
            >
              <a href="#quote">Get a Quote</a>
            </li>
          </ul>
        </div>

        {/* Areas We Cover */}
        <div class="bg-white border-2 border-slate-100 p-8 rounded-2xl">
          <h3 class="typo-xl font-bold mb-4">Areas We Cover</h3>
          <ul class="space-y-2">
            {
              Astro.props.areas?.slice(0, 10).map((area: any) => (
                <li>
                  <a
                    href={`/areas/${area.slug}`}
                    class="text-primary hover:underline typo-base"
                  >
                    {area.title}
                  </a>
                </li>
              ))
            }
            <li>
              <a
                href="/areas-we-cover"
                class="text-muted-foreground hover:text-primary font-bold typo-sm mt-2 block"
              >
                View All Areas â†’
              </a>
            </li>
          </ul>
        </div>
      </aside>
    </div>
  </section>

  {/* FAQ Section */}
  {
    content.faqs && (
      <section id="faq" class="scroll-mt-24">
        <FAQ items={content.faqs} client:load />
      </section>
    )
  }

  {/* CTA Section */}
  <CTA
    title={content.cta?.title}
    description={content.cta?.description}
    buttonText={content.cta?.buttonText}
    phoneText={content.cta?.phoneText}
    id="quote"
  />
</MainLayout>

<style is:global>
  @reference "../styles/global.css";

  /* Markdown styling for the slot */
  .prose h2 {
    @apply typo-3xl mt-12 mb-6;
  }
  .prose h3 {
    @apply typo-2xl mt-8 mb-4;
  }
  .prose p {
    @apply typo-lg leading-relaxed mb-6;
  }
  .prose ul {
    @apply list-disc list-inside mb-6 space-y-2 typo-lg;
  }
</style>
